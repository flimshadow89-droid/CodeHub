<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ultimate Animations</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow: hidden;
            background: #000;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        #canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .ui {
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 100;
            display: flex;
            gap: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 20px 30px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .ui button {
            padding: 12px 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 25px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .ui button:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.5);
        }

        .ui button.active {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            box-shadow: 0 0 30px rgba(245, 87, 108, 0.6);
        }

        .title {
            position: fixed;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            font-size: 48px;
            font-weight: bold;
            text-align: center;
            z-index: 100;
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            animation: titleGlow 2s ease-in-out infinite;
        }

        @keyframes titleGlow {
            0%, 100% { text-shadow: 0 0 20px rgba(255, 255, 255, 0.5); }
            50% { text-shadow: 0 0 40px rgba(255, 255, 255, 0.9), 0 0 60px rgba(102, 126, 234, 0.6); }
        }
    </style>
</head>
<body>
    <div class="title">ULTIMATE ANIMATIONS</div>
    <canvas id="canvas"></canvas>
    <div class="ui">
        <button onclick="setMode('particles')" class="active">Particles</button>
        <button onclick="setMode('waves')">Waves</button>
        <button onclick="setMode('galaxy')">Galaxy</button>
        <button onclick="setMode('dna')">DNA Helix</button>
        <button onclick="setMode('fluid')">Fluid</button>
    </div>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        let w, h, particles = [], mode = 'particles';
        let time = 0;

        function resize() {
            w = canvas.width = window.innerWidth;
            h = canvas.height = window.innerHeight;
        }

        class Particle {
            constructor() {
                this.reset();
            }

            reset() {
                this.x = Math.random() * w;
                this.y = Math.random() * h;
                this.vx = (Math.random() - 0.5) * 2;
                this.vy = (Math.random() - 0.5) * 2;
                this.radius = Math.random() * 3 + 1;
                this.hue = Math.random() * 360;
                this.life = 1;
            }

            update() {
                if (mode === 'particles') {
                    this.x += this.vx;
                    this.y += this.vy;
                    if (this.x < 0 || this.x > w) this.vx *= -1;
                    if (this.y < 0 || this.y > h) this.vy *= -1;
                } else if (mode === 'waves') {
                    this.x += Math.sin(time * 0.001 + this.y * 0.01) * 2;
                    this.y += Math.cos(time * 0.001 + this.x * 0.01) * 2;
                    this.hue = (time * 0.1 + this.x * 0.1) % 360;
                } else if (mode === 'galaxy') {
                    const centerX = w / 2;
                    const centerY = h / 2;
                    const angle = Math.atan2(this.y - centerY, this.x - centerX);
                    const distance = Math.sqrt((this.x - centerX) ** 2 + (this.y - centerY) ** 2);
                    const newAngle = angle + 0.02 * (1 + distance * 0.001);
                    this.x = centerX + Math.cos(newAngle) * distance;
                    this.y = centerY + Math.sin(newAngle) * distance;
                    this.hue = (angle * 57.3 + time * 0.5) % 360;
                } else if (mode === 'dna') {
                    this.x += 1;
                    if (this.x > w) this.x = 0;
                    this.y = h / 2 + Math.sin(this.x * 0.02 + time * 0.01) * 200 + Math.cos(this.x * 0.01) * 50;
                    this.hue = (this.x * 0.5 + time * 0.5) % 360;
                } else if (mode === 'fluid') {
                    const angle = Math.random() * Math.PI * 2;
                    const speed = Math.random() * 2;
                    this.vx += Math.cos(angle) * speed * 0.01;
                    this.vy += Math.sin(angle) * speed * 0.01;
                    this.vx *= 0.99;
                    this.vy *= 0.99;
                    this.x += this.vx;
                    this.y += this.vy;
                    if (this.x < 0 || this.x > w || this.y < 0 || this.y > h) {
                        this.reset();
                    }
                }
            }

            draw() {
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fillStyle = `hsla(${this.hue}, 100%, 60%, ${this.life})`;
                ctx.fill();

                if (mode === 'particles' || mode === 'galaxy') {
                    ctx.shadowBlur = 20;
                    ctx.shadowColor = `hsla(${this.hue}, 100%, 60%, 0.8)`;
                }
            }
        }

        function init() {
            particles = [];
            for (let i = 0; i < 500; i++) {
                particles.push(new Particle());
            }
        }

        function animate() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
            ctx.fillRect(0, 0, w, h);

            time++;

            particles.forEach((p, i) => {
                p.update();
                p.draw();

                if (mode === 'particles') {
                    particles.forEach((p2, j) => {
                        if (i !== j) {
                            const dx = p.x - p2.x;
                            const dy = p.y - p2.y;
                            const dist = Math.sqrt(dx * dx + dy * dy);
                            if (dist < 100) {
                                ctx.beginPath();
                                ctx.moveTo(p.x, p.y);
                                ctx.lineTo(p2.x, p2.y);
                                ctx.strokeStyle = `hsla(${(p.hue + p2.hue) / 2}, 100%, 60%, ${1 - dist / 100})`;
                                ctx.lineWidth = 0.5;
                                ctx.stroke();
                            }
                        }
                    });
                }
            });

            ctx.shadowBlur = 0;
            requestAnimationFrame(animate);
        }

        function setMode(newMode) {
            mode = newMode;
            document.querySelectorAll('.ui button').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            if (newMode !== 'particles') {
                init();
            }
        }

        canvas.addEventListener('mousemove', (e) => {
            for (let i = 0; i < 5; i++) {
                const p = new Particle();
                p.x = e.clientX;
                p.y = e.clientY;
                p.vx = (Math.random() - 0.5) * 10;
                p.vy = (Math.random() - 0.5) * 10;
                particles.push(p);
            }
            if (particles.length > 1000) {
                particles.splice(0, 5);
            }
        });

        window.addEventListener('resize', resize);
        resize();
        init();
        animate();
    </script>
</body>
</html>